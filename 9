#include <stdio.h>

int main() {
    int rows, i, j;

    // get the number of rows from the user
    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    // print the pattern
    for (i = 1; i <= rows; i++) {
        // print spaces before the numbers
        for (j = 1; j <= rows - i; j++) {
            printf("  ");
        }
        
        // print the numbers in descending order
        for (j = i; j >= 1; j--) {
            printf("%2d ", j);
        }
        
        printf("\n");
    }
    
    return 0;
}
